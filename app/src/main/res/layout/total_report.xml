<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/monthTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:text="Month"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/categoryLV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalDepositTitleTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Total Deposit"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/totalRemainTitleTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Total Remaining"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalExpenseTitleTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Total Expense"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="15sp" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalDepositTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total Deposit"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/totalRemainTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total Remaining balance"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalExpenseTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total Expense"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>